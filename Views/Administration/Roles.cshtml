@model SpaceYYZ.Models.AdministrationViewModels.RolesViewModel

<article>
	<section>
		<h1>Roles for @Model.Username</h1>
		<form asp-controller="Administration" asp-action="AddRole" method="post" asp-route-id="@Model.Id" asp-route-newrole="@Model.NewRole">
			<div >
				<select asp-for="NewRole" asp-items="Model.AvailableRoles"></select>
				<button type="submit">Add role</button>
			</div>
			<div class="form-group">
				<ul>
					@foreach(var role in Model.Roles)
					{
					<li>@role <a asp-action="RemoveRole" asp-route-id="@Model.Id" asp-route-username="@Model.Username" asp-route-role="@role">Remove</a></li>
					}
				</ul>
			</div>
		</form>
	</section>
</article>
