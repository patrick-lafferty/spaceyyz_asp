@model LoginViewModel

<h1>Login</h1>
<section>
	<form asp-controller="Account" asp-action="Login" method="post">
		<div class="form-group">
			<label asp-for="Username" class="col-2"></label>
			<input asp-for="Username" type="text" class="offset-col-1">
		</div>

		<div class="form-group">
			<label asp-for="Password" class="col-2"></label>
			<input asp-for="Password" class="offset-col-1">
		</div>

		<div class="form-group">
			<button type="submit" class="offset-col-3 col-2">Log in</button>
		</div>

		<p><a asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]">Register</a></p>
	</form>	
</section>
