@model SignedInViewModel

<section>
	<p>@Model.Username</p>
	<form asp-controller="Account" asp-action="SetCurrentRole" method="post">
		<label>Role</label>
		<select asp-for="CurrentRole" asp-items="Model.AvailableRoles">
		</select>
		<button type="submit">Set</button>
	</form>
	<form asp-controller="Account" asp-action="Logout" method="post" class="miniform">
		<button type="submit">Log out</button>
	</form>
</section>
